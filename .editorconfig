; This file is for unifying the coding style for different editors and IDEs.
; More information at http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.bat]
end_of_line = crlf

[*.yml]
indent_style = space
indent_size = 2

[*.twig]
insert_final_newline = false

[{*.json,composer.lock}]
indent_style = space
indent_size = 4

[*.sql]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
